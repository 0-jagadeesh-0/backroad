{
  "name": "cli",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/cli",
        "tsConfig": "cli/tsconfig.lib.json",
        "packageJson": "cli/package.json",
        "main": "cli/src/index.ts",
        "assets": ["cli/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs cli {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["cli/**/*.ts", "cli/package.json"]
      }
    }
  },
  "tags": []
}
