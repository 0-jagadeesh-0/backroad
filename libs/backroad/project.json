{
  "name": "backroad",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backroad/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/backroad",
        "tsConfig": "libs/backroad/tsconfig.lib.json",
        "packageJson": "libs/backroad/package.json",
        "main": "libs/backroad/src/index.ts",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": ["libs/backroad/**/public/*"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/backroad/**/*.ts",
          "libs/backroad/package.json"
        ]
      }
    },
    "release": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build client",
          "nx run backroad:update-version",
          "nx build backroad",
          "nx run backroad:publish"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx-release:npm-publish",
      "options": {}
    },
    "update-version": {
      "executor": "nx-release:update-version",
      "options": {}
    }
  },
  "tags": []
}
