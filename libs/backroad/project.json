{
  "name": "backroad",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backroad/src",
  "projectType": "library",
  "targets": {
    "publish": {
      "command": "node tools/scripts/publish.mjs backroad {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/backroad/**/*.ts",
          "libs/backroad/package.json"
        ]
      }
    }
  },
  "tags": []
}
